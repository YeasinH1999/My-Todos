<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#BEF0F6"
            android:layout_margin="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tvUserId"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/textview_bg"
                    android:gravity="center"
                    android:text="UserId"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tvTodo"
                    android:layout_below="@id/tvUserId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Todos"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="normal"
                    android:layout_marginTop="10dp"
                    />


                <Button
                    android:id="@+id/btnCompleted"
                    android:layout_width="145dp"
                    android:layout_height="55dp"
                    android:layout_below="@id/tvTodo"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#D8E7F2"
                    android:text="Completed"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:cornerRadius="20dp"
                    />


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/CardView"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_below="@id/btnCompleted"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#D8E7F2"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/imgCheckBox"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:src="@drawable/check_circle"
                        app:tint="#3CB371" />


                </com.google.android.material.card.MaterialCardView>


                <Button
                    android:id="@+id/btnMarkAsComp"
                    android:layout_width="290dp"
                    android:layout_height="55dp"
                    android:layout_below="@id/CardView"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="#D8E7F2"
                    android:text="Mark As Completed"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/check_circle"
                    app:iconGravity="start"
                    app:iconSize="30dp"
                    app:iconTint="#3CB371"
                    />

            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>



</RelativeLayout>